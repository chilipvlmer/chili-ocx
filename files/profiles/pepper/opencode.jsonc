{
  "agent": {
    "scoville-orchestrator": {
      "temperature": 1.0,
      "tools": {
        "edit": false,
        "write": false,
        "bash": false,
        "question": true
      }
    },
    "seed-prd-rfc": {
      "temperature": 1.0,
      "tools": {
        "edit": true,
        "write": true,
        "bash": false,
        "question": true
      },
      "permission": {
        "edit": {
          ".pepper/**": "allow",
          "*": "deny"
        },
        "write": {
          ".pepper/**": "allow",
          "*": "deny"
        },
        "shadcn_*": "allow"
      }
    },
    "sprout-execution-planner": {
      "temperature": 1.0,
      "tools": {
        "edit": true,
        "write": true,
        "bash": false,
        "question": true
      },
      "permission": {
        "edit": {
          ".pepper/**": "allow",
          "*": "deny"
        },
        "write": {
          ".pepper/**": "allow",
          "*": "deny"
        },
        "shadcn_*": "allow"
      }
    },
    "jalapeno-coder": {
      "temperature": 1.0,
      "tools": {
        "question": true
      },
      "permission": {
        "shadcn_*": "allow"
      }
    },
    "habanero-reviewer": {
      "temperature": 1.0,
      "tools": {
        "edit": false,
        "write": false
      },
      "permission": {
        "bash": {
          "git diff*": "allow",
          "git log*": "allow",
          "git status": "allow",
          "*": "deny"
        }
      }
    },
    "ghost-explorer": {
      "temperature": 1.0,
      "tools": {
        "edit": false,
        "write": false
      },
      "permission": {
        "bash": {
          "find*": "allow",
          "grep*": "allow",
          "rg*": "allow",
          "cat*": "allow",
          "head*": "allow",
          "tail*": "allow",
          "wc*": "allow",
          "ls*": "allow",
          "*": "deny"
        },
        "context7_*": "allow",
        "exa_*": "allow",
        "gh_grep_*": "allow"
      }
    },
    "chipotle-scribe": {
      "temperature": 1.0,
      "tools": {
        "question": true
      },
      "permission": {
        "context7_*": "allow"
      }
    }
  },
  "permission": {
    "shadcn_*": "deny",
    "context7_*": "deny",
    "exa_*": "deny",
    "gh_grep_*": "deny",
    "playwright_*": "deny"
  },
  "mcp": {
    "shadcn": {
      "type": "local",
      "command": ["shadcn-mcp-server"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["playwright-mcp"],
      "enabled": true
    },
    "basecoat": {
      "type": "local",
      "command": ["npx", "-y", "basecoat-ui-mcp"],
      "enabled": true
    }
  },
  "$schema": "https://opencode.ai/config.json"
}
